package listaRmi;

import java.rmi.Naming;
import java.util.Scanner;

public class Client {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("Informe o numero da questao (1 - 8): ");
		int questao = scan.nextInt();
    	scan.nextLine();
		
		try{
			Lista l = (Lista) Naming.lookup("rmi://192.168.1.4:1099/ListaService");
			System.out.println("Adição : " +l.reajustaSalario(String nome, String cargo, double salario));
		}catch(Exception e){
			e.printStackTrace();
		}
	}
}

